{%- style -%}
    .store-boxes{
        display: flex;
        justify-content: center;
        gap: 20px;
    }
    .multiple-box{
        padding: 20px;
        background-color: #f5f5f5;
        width: 25%;
        text-align: center;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 124px 
    }
    .multiple-box img{
        max-width: 100px;
        max-height: 40px;
    }
{%- endstyle -%}
<div>
    <h2>{{ section.settings.heading }}</h2>
    <div class="store-boxes">
        {%- for store in section.blocks -%}
            <div style="border-bottom: 4px solid {{ store.settings.border-color }};" class="multiple-box">
                <img src="{{ store.settings.logo | image_url: width: original }}">
            </div>
        {%- endfor -%}
    </div>
</div>

{% schema %}
    {
        "name": "Shop Now",
        "tag": "section",
        "class": "section page-width",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Quick links"
            }
        ],
        "blocks": [
            {
                "type": "column",
                "name": "store",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "logo",
                        "label": "Logo"
                    },
                    {
                        "type": "color",
                        "id": "border-color",
                        "label": "Box Border Color"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Preset Name",
                "blocks": [
                    {
                    "type": "column"
                    },
                    {
                    "type": "column"
                    },
                    {
                    "type": "column"
                    },
                    {
                    "type": "column"
                    }
                ]
            }
        ]

    }
{% endschema %}