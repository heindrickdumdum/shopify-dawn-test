<div>
    <h2>{{ section.settings.heading }}</h2>
    {%- for new in section.blocks -%}
        <p>{{ new.settings.border-color }}</p>
    {%- endfor -%}
</div>

{% schema %}
    {
        "name": "Shop Now",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Quick links"
            }
        ],
        "blocks": [
            {
                "type": "column",
                "name": "store",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "logo",
                        "label": "Logo"
                    },
                    {
                        "type": "color",
                        "id": "border-color",
                        "label": "Box Border Color"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Preset Name"
            }
        ]

    }
{% endschema %}